{
  "author": "TailwindAwesome <hello@tailwindawesome.com> (https://www.tailwindawesome.com)",
  "name": "tailwind-webpack-boilerplate",
  "version": "1.0.0",
  "description": "Starter project tailwind template boilerplate based on Webpack with SASS/PostCSS and babel ES6/7 support.",
  "browserslist": [
    "last 2 versions",
    "> 5%"
  ],
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@babel/preset-env": "^7.13.9",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/typography": "^0.5.0",
    "ajv": "^7.2.1",
    "alpinejs": "^3.2.4",
    "autoprefixer": "^10.4.1",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^7.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^5.1.1",
    "css-minimizer-webpack-plugin": "^1.2.0",
    "eslint": "^7.21.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "favicons": "^6.2.1",
    "favicons-webpack-plugin": "^5.0.2",
    "html-loader": "2.1.2",
    "html-webpack-plugin": "^5.3.0",
    "mini-css-extract-plugin": "^1.3.9",
    "postcss": "^8.4.5",
    "postcss-loader": "^6.1.1",
    "sass": "^1.32.8",
    "sass-lint": "^1.13.1",
    "sass-loader": "^11.0.0",
    "tailwindcss": "^3.0.9",
    "terser-webpack-plugin": "^5.1.1",
    "webpack": "^5.24.4",
    "webpack-bundle-analyzer": "^4.4.0",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.7.3",
    "webpackbar": "^5.0.0-3"
  },
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git@github.com:Tailwind-Awesome/tailwind-webpack-boilerplate.git"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=development webpack --config configuration/webpack.dev.config.js",
    "watch": "cross-env NODE_ENV=development webpack --config configuration/webpack.dev.config.js --watch",
    "bundle": "npm install && npm run watch",
    "dev": "cross-env NODE_ENV=development webpack serve --config configuration/webpack.dev.config.js",
    "production": "cross-env NODE_ENV=production webpack --config configuration/webpack.prod.config.js",
    "lint:sass": "sass-lint -v -q",
    "lint:js": "eslint --ext .js src/js/",
    "stats": "cross-env NODE_ENV=production webpack --config configuration/webpack.prod.config.js --json > dist/stats.json && webpack-bundle-analyzer dist/stats.json"
  },
  "target": "web"
}
